<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.handi.jogjatour.activities.MenuActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#51d8c7"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_title"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:text="@string/text_hello" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.LinearLayoutCompat>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background2"
        android:layout_below="@+id/linearLayout3">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="80dp"
           android:orientation="vertical"
           android:id="@+id/linearLayout">

           <ImageView
               android:paddingTop="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/menuutama"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayout2">

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/btnHarga"
                    android:onClick="harga"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/harga"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/btnBerita"
                    android:onClick="berita"
                    android:layout_margin="10dp"
                    android:background="@drawable/galeri"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/layoutkanan"
                android:layout_alignParentEnd="true">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:id="@+id/btnWisata"
                    android:onClick="Wisata"
                    android:background="@drawable/objekwisata"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:id="@+id/btnTentang"
                    android:onClick="tentang"
                    android:background="@drawable/tentang"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
